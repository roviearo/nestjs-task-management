// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
}

model User {
  id       String @id @db.Uuid
  username String
  password String
  tasks    Task[]
}

model Task {
  id          String     @id @db.Uuid
  title       String
  description String
  status      TaskStatus
  user        User       @relation(fields: [id], references: [id])
  userId      String     @db.Uuid
}
